services:

  db:
    image: postgres
    restart: always
    environment:
      POSTGRES_USER: {{ db_user }}
      POSTGRES_PASSWORD: {{ db_password }}
      POSTGRES_DB: {{ db_name }}
    ports:
      - "5432:5432"
    volumes:
      - db-data:/var/lib/postgresql/data
    networks:
      - data-network

  backend:
    image: zudin116/tolkportal_backend:{{ image_tag }}
    restart: always
    expose:
      - "1337"
    environment:
      DATABASE_CLIENT: postgres
      DATABASE_HOST: db
      DATABASE_PORT: 5432
      DATABASE_NAME: {{ db_name }}
      DATABASE_USERNAME: {{ db_user }}
      DATABASE_PASSWORD: {{ db_password }}
      NODE_ENV: {{ node_env }}
    depends_on:
      - db
    networks:
      - data-network
      - app-network

  frontend:
    image: zudin116/tolkportal_frontend:{{ image_tag }}
    restart: always
    expose:
      - "80"
    networks:
      - app-network

  nginx:
    image: nginx
    container_name: nginx
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - frontend
      - backend
    networks:
      - app-network

volumes:
  db-data:

networks:
  data-network:
  app-network:
